.form-block
  width 100%
  float left
  background base-bg-color2
  box-shadow base-box-shadow
  padding 20px
  position relative

  .progress
    position absolute
    top 0
    left 0
    width 100%
    height 5px

    span
      float left
      height 100%
      background md-green-500
      border-right: 1px solid #ccc;

      &:last-child
        border-right none


.st-input

  .label
    font-size st-input-font-size
    padding st-input-padding
    width 100%
    float left

  input
    padding st-input-padding
    border st-input-border
    font-size st-input-font-size
    border-radius st-input-border-radius
    width 100%
    float left

  .error-message
    width 100%
    float left
    padding st-input-padding
    transition all 0.3s linear
    .txt
      display inline-block
      vertical-align middle
    .material-icons
      vertical-align middle
